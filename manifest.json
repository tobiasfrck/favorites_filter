{
  "manifest_version": 3,
  "name": "Fav-Filter for Vinted",
  "description": "Filter favorite items on Vinted.",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "vintedfavfilteraddon@tobiasfrck"
    }
  },
  

  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.vinted.de/*","*://*.vinted.fr/*","*://*.vinted.com/*"],
      "js": ["main.js"],
      "run_at": "document_end",
      "css": []
    }
  ],

  "permissions": [],
  "host_permissions": ["*://*.vinted.de/*","*://*.vinted.fr/*","*://*.vinted.com/*"],


  "background": {
    "scripts": ["background.js"]
  }
}
